<?xml version="1.0"?>
<ruleset name="PNPC Pocket Service Desk">
	<description>PHPCS ruleset for WordPress Coding Standards.</description>

	<!-- Scan the plugin files. -->
	<file>.</file>

	<!-- Exclude generated/build directories. -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/languages/*</exclude-pattern>

	<!-- Use the WordPress Coding Standards, if installed. -->
	<rule ref="WordPress" />
	<rule ref="WordPress-Core" />
	<rule ref="WordPress-Docs" />
	<rule ref="WordPress-Extra" />

	<!-- Reduce noise from intentional debug logging in WP_DEBUG blocks. -->
	<rule ref="WordPress.PHP.DevelopmentFunctions">
		<exclude name="WordPress.PHP.DevelopmentFunctions.error_log" />
	</rule>

	<config name="testVersion" value="7.4-" />
	<config name="minimum_supported_wp_version" value="5.8" />
</ruleset>
